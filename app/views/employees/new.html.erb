<h1>New Employee Form</h1>

<% if flash[:errors]
    flash[:errors].each do |error| %>
        <p style="color: red; font-size: 18px;" > <%= error %> </p>
    <% end %>
<% end %>

<%= form_for @employee do |f| %>

    <%= f.label :first_name, "First Name: " %>
    <%= f.text_field :first_name %>
    <br /><br />

    <%= f.label :last_name, "Last Name: " %>
    <%= f.text_field :last_name %>
    <br /><br />

    <%= f.label :alias, "Nickname/alias: " %>
    <%= f.text_field :alias %>
    <br /><br />

    <%= f.label :title, "Title: " %>
    <%= f.text_field :title %>
    <br /><br />

    <%= f.label :office, "Office: " %>
    <%= f.text_field :office %>
    <br /><br />

    <%= f.label :img_url, "Enter Image URL: " %>
    <%= f.text_field :img_url %>
    <br /><br />

    <%= f.label :dog, "Dog: " %>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %>
    <br /><br />

    <%= f.submit %>

<% end %>